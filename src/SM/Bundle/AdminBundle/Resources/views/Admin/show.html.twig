{% extends 'SMAdminBundle::layout.html.twig' %}
{%block header%}Thông tin tài khoản{%endblock header%}
{% block body -%}
    <div class="row">

        <div class="col-md-8 col-md-offset-1">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-user"></i> {{ entity.firstname }} {{ entity.lastname }}</h3>
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <tbody>
                                <tr>
                                    <td><strong>Id</strong></td>
                                    <td>{{ entity.id }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Username</strong></td>
                                    <td>{{ entity.username }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Firstname</strong></td>
                                    <td>{{ entity.firstname }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Lastname</strong></td>
                                    <td>{{ entity.lastname }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Điện thoại</strong></td>
                                    <td>{{ entity.phone }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Địa chỉ</strong></td>
                                    <td>{{ entity.address }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Thông tin chi tiếc</strong></td>
                                    <td>{{ entity.description }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày tạo</strong></td>
                                    <td>{{ entity.dateCreation|date("d/m/Y H:i:s") }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày chỉnh sửa</strong></td>
                                    <td>{{ entity.dateModification|date("d/m/Y") }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Password</strong></td>
                                    <td>******</td>
                                </tr>
                                <tr>
                                    <td><strong>Email</strong></td>
                                    <td>{{ entity.email }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-10">
                            <a href="{{ path('admin_user') }}" class="btn btn-warning">
                                Danh sách tài khoản
                            </a>
                            <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}" class="btn btn-info">
                                Chỉnh sửa
                            </a>
                        </div>
                        <div class="col-lg-1">
                            {#                            {{form_start(delete_form)}}
                                                        {{ form_widget(delete_form.submit, {'attr':{'class':'btn btn-danger'}}) }}
                                                        {{form_end(delete_form)}}#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
