{% extends 'SMAdminBundle::layout.html.twig' %}
{%block header%}Chỉnh sửa tài khoản{%endblock header%}
{% block body -%}
    <div class="row">
        {{ form_start(edit_form) }}
        <div class="col-md-8 col-md-offset-1">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-user"></i> Thông tin tài khoản</h3>
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">

                            <tbody>
                                <tr>
                                    <td>{{form_label(edit_form.firstname)}}</td>
                                    <td>{{form_widget(edit_form.firstname)}}</td>
                                </tr>
                                <tr>
                                    <td>{{form_label(edit_form.lastname)}}</td>
                                    <td>{{form_widget(edit_form.lastname)}}</td>
                                </tr>
                                <tr>
                                    <td>{{form_label(edit_form.phone)}}</td>
                                    <td>{{form_widget(edit_form.phone)}}</td>
                                </tr>
                                <tr>
                                    <td>{{form_label(edit_form.address)}}</td>
                                    <td>{{form_widget(edit_form.address)}}</td>
                                </tr>
                                <tr>
                                    <td>{{form_label(edit_form.email)}}</td>
                                    <td>{{form_widget(edit_form.email)}}</td>
                                </tr>
                                <tr>
                                    <td>{{form_label(edit_form.username)}}</td>
                                    <td>{{form_widget(edit_form.username)}}</td>
                                </tr>
                                <tr>
                                    <td>{{form_label(edit_form.password.first)}}</td>
                                    <td>{{form_widget(edit_form.password.first)}}</td>
                                </tr>
                                <tr>
                                    <td>{{form_label(edit_form.password.second)}}</td>
                                    <td>{{form_widget(edit_form.password.second)}}</td>
                                </tr>
                                <tr>
                                    <td>{{form_label(edit_form.description)}}</td>
                                    <td>{{form_widget(edit_form.description)}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="panel-footer">
                    {{form_widget(edit_form.submit, {'attr':{'class':'btn btn-primary'}})}}
                    <a href="{{ path('admin_user') }}" class="btn btn-warning">
                        Danh sách tài khoản
                    </a>

                </div>
            </div>
        </div>
        {{ form_end(edit_form) }}
    </div>
    {#    {{form_start(delete_form)}}
        {{ form_widget(delete_form.submit, {'attr':{'class':'btn btn-danger'}}) }}
        {{form_end(delete_form)}}#}
{% endblock %}
