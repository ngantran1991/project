{% extends 'SMAdminBundle::layout.html.twig' %}
{%block header%}{{'admin.role.titleIndex'|trans({}, 'SMAdminBundle')}}{%endblock header%}
{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading"> <i class="fa fa-sitemap"></i> {{'admin.role.titleIndex'|trans({}, 'SMAdminBundle')}} </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>{{'admin.id'|trans({}, 'SMAdminBundle')}}</th>
                                    <th>{{'admin.role.name'|trans({}, 'SMAdminBundle')}}</th>
                                    <th>{{'admin.role.role'|trans({}, 'SMAdminBundle')}}</th>
                                    <th>{{'admin.table.actions'|trans({}, 'SMAdminBundle')}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td><a href="{{ path('admin_role_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                        <td>{{ entity.name }}</td>
                                        <td>{{ entity.role }}</td>
                                        <td>
                                            {#<a href="{{ path('admin_role_show', { 'id': entity.id }) }}" class="btn btn-primary">{{'admin.button.show'|trans({}, 'SMAdminBundle')}}</a>#}
                                            <a href="{{ path('admin_role_edit', { 'id': entity.id }) }}" class="btn btn-info">{{'admin.button.edit'|trans({}, 'SMAdminBundle')}}</a>
                                            <a href="{{ path('admin_role_delete', { 'id': entity.id }) }}" class="btn btn-danger">{{'admin.button.delete'|trans({}, 'SMAdminBundle')}}</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="{{ path('admin_role_new') }}" class="btn btn-primary">
                        {{'admin.button.create'|trans({}, 'SMAdminBundle')}}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
