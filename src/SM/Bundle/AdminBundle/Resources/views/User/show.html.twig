{% extends 'SMAdminBundle::layout.html.twig' %}
{%block header%}{{'admin.user.panelDetail'|trans({}, 'SMAdminBundle')}}{%endblock header%}
{% block body -%}
    <div class="row">

        <div class="col-md-8 col-md-offset-1">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-user"></i> {{ entity.username }}</h3>
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover">
                            <tbody>
                                <tr>
                                    <td><strong>{{'admin.id'|trans({}, 'SMAdminBundle')}}</strong></td>
                                    <td>{{ entity.id }}</td>
                                </tr>
                                <tr>
                                    <td><strong>{{'admin.user.username'|trans({}, 'SMAdminBundle')}}</strong></td>
                                    <td>{{ entity.username }}</td>
                                </tr>
                                <tr>
                                    <td><strong>{{'admin.user.password'|trans({}, 'SMAdminBundle')}}</strong></td>
                                    <td>******</td>
                                </tr>
                                <tr>
                                    <td><strong>{{'admin.user.email'|trans({}, 'SMAdminBundle')}}</strong></td>
                                    <td>{{ entity.email }}</td>
                                </tr>
                                <tr>
                                    <td><strong>{{'admin.user.isActive'|trans({}, 'SMAdminBundle')}}</strong></td>
                                    <td>{{ entity.isActive }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-lg-10">
                            <a href="{{ path('admin_user') }}" class="btn btn-warning">
                                {{'admin.button.backtolist'|trans({}, 'SMAdminBundle')}}
                            </a>
                            <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}" class="btn btn-info">
                                {{'admin.button.edit'|trans({}, 'SMAdminBundle')}}
                            </a>
                        </div>
                        <div class="col-lg-1">
                            {#                            {{form_start(delete_form)}}
                                                        {{ form_widget(delete_form.submit, {'attr':{'class':'btn btn-danger'}}) }}
                                                        {{form_end(delete_form)}}#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
